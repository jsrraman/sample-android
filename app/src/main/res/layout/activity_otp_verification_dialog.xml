<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/otp_verification_rl_root"
    android:layout_width="280dp"
    android:layout_height="188dp">

    <TextView
        android:id="@+id/otp_verification_textview_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/otp_verification_message" />

    <EditText
        android:id="@+id/otp_verification_edittext_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otp_verification_textview_message"
        android:layout_centerHorizontal="true"
        android:ems="6"
        android:maxEms="6"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="6"
        android:singleLine="true" />

    <Button
        android:id="@+id/otp_verification_button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/otp_verification_button_verify"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/otp_verification_button_verify"
        android:background="@android:color/transparent"
        android:text="@string/back"
        android:textAllCaps="true"
        android:textColor="@color/default_black" />

    <Button
        android:id="@+id/otp_verification_button_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/transparent"
        android:enabled="false"
        android:text="@string/verify"
        android:textAllCaps="true"
        android:textColor="@color/sz_pink_color_disabled" />
</RelativeLayout>