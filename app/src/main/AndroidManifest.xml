<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rajaraman.sample">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="com.rajaraman.sample.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.rajaraman.sample.ui.MainActivity_"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.rajaraman.sample.ui.OTPVerificationDialogActivity_"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppDialog" />

        <activity android:name="com.rajaraman.sample.ui.EditTextTestActivity_" />
        <activity android:name="com.rajaraman.sample.ui.ImageViewTestActivity_" />
        <activity android:name="com.rajaraman.sample.ui.TestActivity_" />
        <activity android:name="com.rajaraman.sample.ui.FBActivity_" />
        <activity android:name="com.rajaraman.sample.ui.DbActivity_" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
    </application>

</manifest>
